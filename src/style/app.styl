
*
  margin 0
  padding 0

body
  font-family $font-normal

h2
  font-size 14px
  font-family $font-bold

ul, li
  list-style none

ul, ol, dl
  margin-bottom 0

a
  &:focus
    text-decoration none

.ant-spin-nested-loading
  height 100%
  overflow auto

.ant-upload-select-picture-card
  i
    font-size 32px
    color #999

  .ant-upload-text
    margin-top 8px
    color #666

.ant-input, .ant-select, .ant-input-group-wrapper
  max-width 100%

  &.small
    width 160px

  &.medium
    width 360px

  &.large
    width 540px

  + .ant-form-text
    margin-left 0.5em

.ant-table
  .ant-btn
    margin 4px

.ant-breadcrumb
  margin-bottom $main-margin
  border-bottom 1px solid $main-border-color
  padding-bottom ($main-margin / 2)

.ant-btn
  border-radius 2px
  width 80px
  height 30px

.ant-btn-primary
  border transparent
  background-color $primary-color
  height 30px
  line-height normal
  color #fff

.ant-btn-default
  background-color #fff
  color $btn-default-color
  border 1px solid $primary-color

.ant-btn-link
  background-color #fff
  color $btn-link-color

.ant-select-selection__rendered
  width 160px
  height 30px

.ant-select-selection__placeholder
  width 160px
  height 30px

.ant-table-tbody > tr > td
  padding 30px 16px

.ant-modal-body
  overflow auto
  position relative